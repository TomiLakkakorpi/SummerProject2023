<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <GridLayout
        android:id="@+id/editScreenGridLayout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="200sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="200sp"

        android:background="@color/purple_500"
        android:columnCount="2"
        android:rowCount="6"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvEditScreenStatus"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="10sp"

            android:text="Merkitse Tehdyksi"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"

            tools:layout_editor_absoluteY="19dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvEditScreenHeader"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="10sp"

            android:text="@string/otsikkoString"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"

            tools:layout_editor_absoluteY="19dp" />

        <EditText
            android:id="@+id/etEditScreenHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvEditScreenTime"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="10sp"

            android:text="@string/kellonaikaString"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"

            tools:layout_editor_absoluteY="19dp" />

        <EditText
            android:id="@+id/etEditScreenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/tvEditScreenDate"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="10sp"

            android:text="@string/paivamaaraString"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"

            tools:layout_editor_absoluteY="19dp" />

        <EditText
            android:id="@+id/etEditScreenDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/tvEditScreenDay"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"

            android:layout_margin="10sp"

            android:text="@string/paivaString"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etEditScreenDay"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"

            android:backgroundTint="#000000"
            android:ems="10"

            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/tvEditScreenDetails"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="10sp"

            android:text="@string/lisatiedotString"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"

            tools:layout_editor_absoluteY="19dp" />

        <EditText
            android:id="@+id/etEditScreenDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvEditScreenCategory"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="10sp"

            android:text="@string/kategoriaString"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"

            tools:layout_editor_absoluteY="19dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

    </GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/updateScreenCancel"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_cancel"
        app:backgroundTint="@color/green_add"
        app:layout_constraintEnd_toStartOf="@+id/updateScreenDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editScreenGridLayout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/updateScreenDelete"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_delete"
        app:backgroundTint="@color/red_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editScreenGridLayout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/updateScreenUpdate"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_update"
        app:backgroundTint="@color/blue_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/updateScreenDelete"
        app:layout_constraintTop_toBottomOf="@+id/editScreenGridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>