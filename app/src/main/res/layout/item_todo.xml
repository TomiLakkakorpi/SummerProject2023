<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskMainConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/taskCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTaskHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Parturi"
        app:layout_constraintStart_toEndOf="@+id/taskCheckbox"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTaskTimeAndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="12:30 16.5.2023"
        app:layout_constraintStart_toEndOf="@+id/taskCheckbox"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskHeader" />

    <Button
        android:id="@+id/buTaskExpand"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:text="@string/laajennaLisatiedotString"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/taskCategoryBarShort"
        app:layout_constraintStart_toEndOf="@+id/taskCheckbox"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskTimeAndDate" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="10dp"
        android:text="Hyvinvointi"
        app:layout_constraintEnd_toStartOf="@+id/taskCategoryBarShort"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTaskDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:paddingRight="90dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean in lacus pretium ante gravida finibus id id tellus. Morbi pellentesque, lorem eget dictum mollis, turpis nisi tempus nunc, sit amet porta leo augue ac quam. Proin dictum vehicula magna. Vestibulum ut iaculis elit, ac efficitur magna. Nunc volutpat odio egestas dui consectetur, et blandit nunc iaculis. Donec aliquet in nisi sit amet venenatis. Proin ornare risus quis egestas fringilla. "
        app:layout_constraintStart_toEndOf="@+id/taskCheckbox"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskTimeAndDate" />

    <Button
        android:id="@+id/buTaskHide"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:text="@string/piilotaLisatiedotString"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/taskCategoryBarShort"
        app:layout_constraintStart_toEndOf="@+id/taskCheckbox"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskDetails" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp Test Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/taskCategoryBarShort"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/taskCategoryBarLong"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



