<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.databasetest.fragments.list.ListFragment"
        android:label="Tehtävälista"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
        <action
            android:id="@+id/action_listFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.databasetest.fragments.add.AddFragment"
        android:label="Lisää Tehtävä"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.databasetest.fragments.update.UpdateFragment"
        android:label="Päivitä Tai Poista Tehtävä">
        <action
            android:id="@+id/action_updateFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentTask"
            app:argType="com.example.databasetest.model.Task" />
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.databasetest.fragments.filter.FilterFragment"
        android:label="Category Filter" >
        <action
            android:id="@+id/action_filterFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>